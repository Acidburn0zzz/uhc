%%[(8888 codegen coresysf) hs
cmodSysfCheck
  :: EHCOpts
     -> CModule
     -> ( CModule
        , LamMp
        )
cmodSysfCheck opts cmod
  = ( cTrf_Syn_CodeAGItf t
    , gathLamMp_Syn_CodeAGItf t
    )
  where t = wrap_CodeAGItf (sem_CodeAGItf (CodeAGItf_AGItf cmod))
                           (Inh_CodeAGItf
                             { opts_Inh_CodeAGItf = opts
                             , lamMp_Inh_CodeAGItf = Map.empty
                             })
%%]

%%[(8 codegen coresysf) hs export(CheckEnv(..),emptyCheckEnv)
data CheckEnv
  = CheckEnv
      { cenvLamMp       :: LamMp
      }

emptyCheckEnv
  = CheckEnv
      emptyLamMp
%%]

%%[(8 codegen coresysf) hs export(cmodSysfCheck)
cmodSysfCheck :: EHCOpts -> CheckEnv -> CModule -> ErrL
cmodSysfCheck opts env cmod
  = Seq.toList $ gathErrs_Syn_CodeAGItf t
  where t = wrap_CodeAGItf
              (sem_CodeAGItf (CodeAGItf_AGItf cmod))
              (Inh_CodeAGItf
                { opts_Inh_CodeAGItf = opts
                , env_Inh_CodeAGItf  = env
                })
%%]

