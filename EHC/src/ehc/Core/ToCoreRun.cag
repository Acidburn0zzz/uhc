%%[(8 corerun)
ATTR CodeAGItf CModule [ | | crm: {CR.Mod} ]

SEM CModule
  | Mod			lhs			.	crm				=	CR.Mod_Mod @moduleNm (CR.mkCRArray $ map snd @expr.crb) @expr.cre
