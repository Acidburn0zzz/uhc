  | Var         (loc.tgi_,lhs.tyGam)                :=  tyGamLookupOrAdd @lUniq @nm (gamTop @lhs.tyGam) @lhs.tyGam
                (loc.tkgi_,lhs.tyKiGam,loc.tyKiGamNew)
