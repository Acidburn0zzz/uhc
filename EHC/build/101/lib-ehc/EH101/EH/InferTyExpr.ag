                                                        in   (@lUniq,TyGamInfo t)
                tyExpr      .   tyGam               =   tvGathFlowIn  (@tyVar `gamSingleton` @tgi_) @lhs.tyGam
                lhs         .   tyGam               =   tvGathFlowOut @lhs.tyGam @tyExpr.tyGam
                loc         .   lUniq               :   UNIQUEREF gUniq

